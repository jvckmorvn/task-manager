<h1><%= @task.title %></h1>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>
<p><%= link_to "Back to all tasks", tasks_path(@tasks) %></p>
<p><%= link_to "Edit this task",  task_edit_path(@task) %></p>
<%= link_to "Delete this task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
